<?xml version="1.0"?>
<robot name="robotic_bird" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <!-- Base link -->
  <link name="base_link">
    <visual>
      <geometry>
        <sphere radius="0.2"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.2"/>
      </geometry>
      <surface>
        <contact>
          <collide_bitmask>0</collide_bitmask>
        </contact>
      </surface>
    </collision>
    <inertial>
      <mass value="5.0"/>
      <inertia 
        ixx="0.08" ixy="0" ixz="0" 
        iyy="0.08" iyz="0" 
        izz="0.08"/>
    </inertial>
  </link>

  <!-- Gazebo-specific properties -->
  <gazebo reference="base_link">
    <gravity>true</gravity>
    <self_collide>false</self_collide>
    <kinematic>false</kinematic>
    <mu1>0.2</mu1>
    <mu2>0.2</mu2>
    <kp>100000</kp> <!-- contact stiffness -->
    <kd>1.0</kd>    <!-- contact damping -->
    <allow_free_motion>true</allow_free_motion>
  </gazebo>

  <!-- Flap plugin -->
  <gazebo>
    <plugin name="flap_plugin" filename="libflap_plugin.so">
      <link_name>base_link</link_name>
      <update_rate>100</update_rate>
    </plugin>
  </gazebo>
</robot>
